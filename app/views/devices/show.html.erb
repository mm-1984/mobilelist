<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @device.name %></h3>
      </div>
      <div class="card-body">
        <% if @device.image? %>
          <%= image_tag @device.image.url, :size => '150x250' %>
        <% else %>
          <image src="/assets/default.png" class="rounded img-fluid" alt="ユーザーアイコン" >
        <% end %>
        <p><%= @device.content %></p>
      </div>
      <div class="count_liked">
        <p>いいね！の数 <%= @count_liked %></p>
      </div>
      
    </div>
    
    <% if logged_in? %>
      <%= render 'favorites/favorite_botton', device: @device %>
    <% end %>
    <div>
      
      <%= link_to("口コミを投稿する", "/devices/#{@device.id}/review") %>
      
    </div>
    <% if admin_user? %>
      <ul class="list-unstyled">
        <li><%= link_to '端末情報を編集', edit_device_path(@device) %></li>
        <li><%= link_to '端末情報を削除', @device, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }  %></li>
      </ul>
    <% end %>
  </aside>
    
    <div class="col-sm-8">
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item"><a href="#" class="nav-link">口コミ一覧</a></li>
    </ul>
  <ul class="list-unstyled">
    <% @reviews.each do |review| %>
      <li class="media">
        <img class="mr-1 rounded" >
        <div class="media-body">
          <div>
            <%= review.user_id %>: <%= review.content %>: <%= review.device_id %>
            <ul class="list-unstyled">
              <li><%= link_to "口コミを編集する", edit_review_path(review) %></li>
        <li><%= link_to '口コミを削除', review, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }  %></li>
              </ul>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
    
  </div>
  </div>
</div>
