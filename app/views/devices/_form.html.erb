<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(model: device, local: true) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
      <div class="form-group">
        <%= f.label :name, 'Name' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :maker, 'メーカー' %>
        <%= f.text_field :maker, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :on_sale, '発売日' %>
        <%= f.text_field :on_sale, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :size, '画面サイズ' %>
        <%= f.text_field :size, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :content, 'その他' %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :image, 'image' %>
        <%= f.file_field :image %>
      </div>
      <%= f.submit '送信' %>
    <% end %>
  </div>
</div>